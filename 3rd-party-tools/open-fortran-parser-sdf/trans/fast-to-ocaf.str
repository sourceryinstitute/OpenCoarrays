               [AssignmentStmt(no-label(),VarDef("cl_status__")
                   , FunctionReference("setKernelArg"
                       ,[kernel,<subti>(index,1),VarRef("focl_intvar__")]))] ]

opencl-kernel-arg-type(|ct) =
     ?(cl_symbol, DerivedType("CLBuffer",_),_)
